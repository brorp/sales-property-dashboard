{
    "name": "@property-lounge/server",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "pnpm run dev:prepare && pnpm run dev:raw",
        "dev:raw": "tsx watch --ignore ../../node_modules --ignore ./node_modules src/index.ts",
        "dev:prepare": "pnpm run db:push && (pnpm run db:seed || echo '[dev:prepare] seed failed, continuing with existing data')",
        "build": "tsc",
        "start": "node dist/index.js",
        "pm2:start": "pm2 start ecosystem.config.cjs",
        "pm2:restart": "pm2 restart property-lounge-server",
        "pm2:stop": "pm2 stop property-lounge-server",
        "pm2:delete": "pm2 delete property-lounge-server",
        "pm2:logs": "pm2 logs property-lounge-server",
        "pm2:save": "pm2 save",
        "db:push": "drizzle-kit push",
        "db:seed": "tsx src/db/seed.ts",
        "db:studio": "drizzle-kit studio",
        "db:generate": "drizzle-kit generate"
    },
    "dependencies": {
        "@whiskeysockets/baileys": "^6.7.18",
        "@property-lounge/shared": "workspace:*",
        "better-auth": "^1.2.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.0",
        "drizzle-orm": "^0.39.0",
        "express": "^4.21.0",
        "postgres": "^3.4.0",
        "qrcode-terminal": "^0.12.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.0.0",
        "@types/qrcode-terminal": "^0.12.2",
        "drizzle-kit": "^0.30.0",
        "tsx": "^4.19.0",
        "typescript": "^5.7.0"
    }
}
